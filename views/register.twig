{% extends 'layout.twig' %}

{% block body %}



    <div class="card  col-md-6 offset-md-3">
        <div class="card-header">Kayıt Ol</div>
        <div class="card-body">
            {% if error != null %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Hata!</strong>  {{ error }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}
            <form action="/register" method="POST">
                <input class="form-control" type="text" name="username" placeholder="e-posta" />
                <input class="form-control mt-3" type="password" name="password" placeholder="parola" />
                <input class="form-control mt-3" type="password" name="password2" placeholder="parola" />
                <input class="btn btn-success form-control mt-3" type="submit" value="Kayıt Ol">
            </form>
        </div>
    </div>

{% endblock %}
